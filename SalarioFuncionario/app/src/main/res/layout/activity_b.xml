<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginTop="30dp">

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="NOME : "
        />

    <TextView
        android:id="@+id/text_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nome"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nome"
        android:textSize="20dp"
        android:text="CARGO : "
        />

    <TextView
        android:id="@+id/text_cargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_nome"
        android:layout_toEndOf="@id/cargo"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/salario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cargo"
        android:textSize="20dp"
        android:text="SALARIO COM DESCONTO : "
        />

    <TextView
        android:id="@+id/text_salario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/salario"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/bnt_voltar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VOLTAR"/>


    </LinearLayout>

</RelativeLayout>